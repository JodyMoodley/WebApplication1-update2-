@model IEnumerable<WebApplication1.Models.City>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @using (Html.BeginForm("Index", "Cities", FormMethod.Get))
    {
        <b> Search By:</b>
        @Html.RadioButton("searchBy", "Name", true)<text>City Name</text>
        @Html.RadioButton("searchBy", "Province") <text> Province </text><br />
        @Html.TextBox("search") <input type="submit" value="Search" />
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Province.ProvinceName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CityName)
        </th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="2">No Records Found</td>
        </tr>
    }
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Province.ProvinceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CityName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CityID }) |
                @Html.ActionLink("Details", "Details", new { id = item.CityID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CityID })
            </td>
        </tr>
    }

</table>
